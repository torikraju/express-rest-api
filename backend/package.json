    "express": "^4.16.3",
    "express-validator": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4",
    "multer": "^1.4.1",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/mongoose": "^5.5.7",
    "@types/node": "^12.6.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^1.18.4"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "no-console": "off",
      "dot-notation": "off",
      "array-callback-return": "off",
      "arrow-parens": "off",
      "consistent-return": "off",
      "no-param-reassign": "off",
      "no-underscore-dangle": "off",
      "max-len": [
        "error",
        {
          "code": 240
        }
      ],
      "func-names": "off",
      "prefer-promise-reject-errors": "off",
      "import/no-extraneous-dependencies": "off",
      "global-require": "off"
    }
  }
}
